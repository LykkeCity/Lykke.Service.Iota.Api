									"    console.info(\"dwBalanceCurrent: \" + dwBalanceCurrent);",
									"    console.info(\"dwBalanceExpected: \" + dwBalanceExpected);",
									"    console.info(\"dwBlockCurrent: \" + dwBlockCurrent);",
